extends layout

block content

    div.loginBar
        
        if(!user.id)
            div.login
                ul
                    li: a.loginUser(href="/login", alt="login") Login
                    li: a.signup(href="/signup", alt="signup") Signup
            div.loginFace
                a.facebook(href="/auth/facebook") <i class="fa fa-facebook"></i> with Facebook
        else
            div.logged
                ul
                    li 
                        a(href="/profile")
                            img.loginImg(src="#{user.photo}")
                            |#{user.name.first}
                    li: a(href="/logout") Log Out

        
    div.leaderboard
        h2 Leaderboards
        section.tabs
            input#tab-1.tab-selector-1(type="radio", name="radio-set", checked="checked")
            label.tab-label-1(for="tab-1") Friends

            input#tab-2.tab-selector-2(type="radio", name="radio-set")
            label.tab-label-2(for="tab-2") NC Users

            input#tab-3.tab-selector-3(type="radio", name="radio-set")
            label.tab-label-3(for="tab-3") Global

            div.clear-shadow

            div.tabcontent
                div.content-1
                    if(friends)
                        table
                            tr
                                td User
                                td Score
                            for friend in friends
                                tr
                                    td
                                        if(friend.photo)
                                            img.lphoto(src="#{friend.photo}")
                                        p #{friend.name.first}

                                    td #{friend.scores.best}
                    else
                        br
                        h2 How about competing with your friends?!
                        br
                        ul.facebookLog
                            li
                                a.facebook(href="/auth/facebook") <i class="fa fa-facebook"></i> Facebook Login
                div.content-2
                    table
                        tr
                            td User
                            td Score
                        for uleads in ulead
                            tr
                                td
                                    if(uleads.photo)
                                        img.lphoto(src="#{uleads.photo}")
                                    p #{uleads.name.first}

                                td #{uleads.scores.best}
                    

                div.content-3
                    table
                        tr
                            td User
                            td Score
                        for leads in lead
                            tr
                                td: p Anonymous
                                td #{leads.score}

    div.container
        div.heading
            h1.title NumbersClash
            div.timer
                span#timer 00 : 00 : 00 : 000
            div.scores-container
                div.score-container 0
                div.best-container 0
        
        p.game-intro Join the numbers to get to the <strong>2048 tile...<small>or more!</small></strong>

        div.game-container
            div.game-message
                p
                div.lower
                    a.keep-playing-button keep going
                    a.retry-button Try again
                h3(style="margin: 15px auto;font-weight:bold;font-size:18pt;") How about challenging your friends?!
                iframe(src="http://www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2Fpages%2FNumbers-Clash%2F1480066965549272&width&layout=box_count&action=like&show_faces=true&share=true&height=65&appId=471413439653703", scrolling="no", frameborder="0", style="border:none; overflow:hidden;width:82px;margin:10px auto 0; height:90px;", allowTransparency="true")
            div.grid-container
                div.grid-row
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell
                div.grid-row
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell
                div.grid-row
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell
                div.grid-row
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell

            div.tile-container
        
        div.sharing
            ul
                li(style="position:relative;")
                    a.facebook#facebookShare(href="https://www.facebook.com/sharer/sharer.php?u=http://www.numbersclash.com/", target="_blank") <i class="fa fa-facebook"></i> Share on Facebook
                    div.share-bubble(style="border-color: #EEE4DA; background: #EEE4DA;") 5K
                li
                    a.twitter#twitterShare(href="https://twitter.com/home?status=%23NumbersClash%20http://www.numbersclash.com%20,%20A%20better,%20more%20social%20and%20engaging,%202048/threes%20game!", target="_blank") <i class="fa fa-twitter"></i> Share on Twitter
                li
                    a.google#googleShare(href="https://plus.google.com/share?url=http://www.numbersclash.com/", target="_blank") <i class="fa fa-google-plus"></i> Share on Google+

        p.game-explanation <strong class="important">How to play:</strong>Use your <strong>arrow keys</strong> to move the tiles. When two tiles with the same number touch, they <strong>merge into one!</strong> The more tiles you merge, the more <strong>points you earn!</strong>
