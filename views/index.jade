extends layout

block content

    div.loginBar
        if(!user.id)
            div.login
                ul
                    li: a.loginUser(href="/login", alt="login") Login
                    li: a.signup(href="/signup", alt="signup") Signup
        else
            div.logged
                ul
                    li 
                        a(href="/profile")
                            img.loginImg(src="#{user.photo}")
                            |#{user.name.first}
                    li: a(href="/logout") Log Out
    div.leaderboard
        h2 Leaderboards
        section.tabs
            input#tab-1.tab-selector-1(type="radio", name="radio-set", checked="checked")
            label.tab-label-1(for="tab-1") Global

            input#tab-2.tab-selector-2(type="radio", name="radio-set")
            label.tab-label-2(for="tab-2") NC Users

            div.clear-shadow

            div.tabcontent
                div.content-1

                    table
                        tr
                            td User
                            td Score
                        for leads in lead
                            tr
                                td: p Anonymous
                                td #{leads.score}

                div.content-2
                    table
                        tr
                            td User
                            td Score
                        for uleads in ulead
                            tr
                                td
                                    if(uleads.photo)
                                        img.lphoto(src="#{uleads.photo}")
                                    p #{uleads.name.first}

                                td #{uleads.scores.best}

    div.container
        div.heading
            h1.title NumbersClash
            div.timer
                span#timer 00 : 00 : 00 : 000
            div.scores-container
                div.score-container 0
                div.best-container 0
        
        p.game-intro Join the numbers to get to the <strong>2048 tile...<small>or more!</small></strong>

        div.game-container
            div.game-message
                p
                div.lower
                    a.keep-playing-button keep going
                    a.retry-button Try again
            div.grid-container
                div.grid-row
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell
                div.grid-row
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell
                div.grid-row
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell
                div.grid-row
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell
                    div.grid-cell

            div.tile-container
        
        div.sharing
            ul
                li
                    a.facebook(href="https://www.facebook.com/sharer/sharer.php?u=http://www.numbersclash.com/", target="_blank") <i class="fa fa-facebook"></i> Share on Facebook
                li
                    a.twitter(href="https://twitter.com/home?status=http://www.numbersclash.com/%20,%20A%20better,%20more%20social%20and%20engaging%202048/threes%20game!", target="_blank") <i class="fa fa-twitter"></i> Share on Twitter
                li
                    a.google(href="https://plus.google.com/share?url=http://www.numbersclash.com/", target="_blank") <i class="fa fa-google-plus"></i> Share on Google Plus

        p.game-explanation <strong class="important">How to play:</strong>Use your <strong>arrow keys</strong> to move the tiles. When two tiles with the same number touch, they <strong>merge into one!</strong> The more tiles you merge, the more <strong>points you earn!</strong>
