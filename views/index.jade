extends layout

block content
    div.loginBar
        if(!user.id)
            div.login
                ul
                    li: a.loginUser(href="/login", alt="login") Login
                    li: a.signup(href="/signup", alt="signup") Signup
        else
            div.logged
                ul
                    li 
                        a(href="/profile")
                            img.loginImg(src="#{user.photo}")
                            |#{user.name.first}
                    li: a(href="/logout") Log Out
    div.leaderboard
        h2 Leaderboards Coming Soon!

    div.container
        div.heading
            h1.title NumbersClash
            div.timer
                span#timer 00 : 00 : 00 : 000
